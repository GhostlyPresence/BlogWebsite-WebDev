<p>
    <%= content %>
</p>
<% blogs.forEach(function(blog){ %>
    <h1><%= blog.title %></h1>
    <p>
        <%= blog.content.slice(0,300)+"..." %>
        <a href="/posts/<%= blog.title %>">Read more</a>
    </p>
<% });%>
